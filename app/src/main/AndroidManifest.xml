<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.licenseplate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".views.activities.adm.StoreListAdm"></activity>
        <activity android:name=".views.activities.adm.StoreRegister" />
        <activity android:name=".views.activities.login.ForgotPassword" />
        <activity android:name=".views.activities.login.LoginStamper" />
        <activity android:name=".views.activities.adm.UserList" />
        <activity android:name=".views.activities.adm.UserRegister" />
        <activity android:name=".views.activities.stamper.AuthorizationList" />
        <activity android:name=".views.activities.stamper.LicenseHistory" />
        <activity android:name=".views.activities.client.VerifyRequest" />
        <activity android:name=".views.activities.client.StoreList" />
        <activity android:name=".views.activities.client.ClientData" />
        <activity android:name=".views.activities.client.HelpLicenseRequest" />
        <activity android:name=".views.activities.client.RequestLicense" />
        <activity android:name=".views.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>